<div> 
  <%= form_with(model: [question, Answer.new]) do |form| %>

    <div class="my-5">
      <%= form.label :body %>
      <%= form.text_field :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <%= form.submit class: 'btn btn-sm m-3' %>
  <% end %>
</div>
