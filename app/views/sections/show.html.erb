<div>
  <%= render @section %>
</div>


<div class="flex justify-center">

  <%# lessons for a specific section %>
  <% if @section.lessons.any? %>
    <div class="flex justify-between items-center my-4">
      <h3 class="text-lg font-medium">
        <%= pluralize(@section.lessons.size, 'lesson') %>
      </h3>
      <%= turbo_frame_tag 'lessons' do %>
        <%= link_to 'lessons', section_lessons_path(@section), class: 'inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      <% end %>
    </div>
  <% end %>
</div>
