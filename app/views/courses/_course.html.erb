<div id="<%= dom_id course %>">
  <h3>Course</h3>
  
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= course.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= course.description %>
  </p>

  <p class="my-5">
    <%= link_to 'edit', edit_course_path(course) %>
  </p>

  <p class="my-5">
    <%= button_to 'delete', course_path(course), method: :delete %>
  </p>

  <p class="my-5">
    <%= link_to 'new section', new_course_section_url(@course) %>
  </p>
</div>