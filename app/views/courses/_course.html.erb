<div id="<%= dom_id course %>">
  <h3>Course</h3>
  
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= course.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= course.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= course.amount %>
  </p>

  <p class="my-5">
    <%= turbo_frame_tag 'edit-course' do %>
      <%= link_to 'edit', edit_course_path(course), class: 'btn btn-sm btn-primary' %>
    <% end %>
  </p>

  <p class="my-5">
    <%= button_to 'delete', course_path(course), method: :delete, class: 'btn btn-sm btn-danger' %>
  </p>

  <p class="my-5">
    <%# empty frame %>
    <%= turbo_frame_tag Section.new %>

    <%= link_to 'new section', new_course_section_url(course) , class: 'btn btn-sm btn-info', data: {turbo_frame: dom_id(Section.new)} %>    
  </p>

  <%# subscribe to course %>
  <div>
      <%= turbo_frame_tag 'subscribe' do %>
        <%= link_to 'subscribe', new_course_subscription_url(course), class: 'btn btn-sm btn-error' %>
      <% end %>
  </div>
</div>
