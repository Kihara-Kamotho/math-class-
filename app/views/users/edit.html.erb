<div class='m-4'>
  <div class="flex justify-center">
    <h3 class="text-xl font-bold mb-4">Edit User</h3>
  </div>

  <strong>Name: </strong><%= @user.name %>
  <%= form_with(model: @user) do |form| %>
    <strong>User Roles: </strong><%= form.collection_check_boxes :role_ids, Role.all, :id, :name %>
    <%= @user.errors[:roles] %>
    <div class='m-3'><%= form.submit class: 'btn btn-sm' %></div>
  <% end %>
</div>
